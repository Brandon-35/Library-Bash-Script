#!/bin/bash

# Định nghĩa file log
LOG_FILE="$HOME/git_commit_log.txt"

# Lấy thông tin push
TIMESTAMP=$(date "+%Y-%m-%d %H:%M:%S")
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)
REMOTE_URL=$(git remote get-url origin)

# Ghi log vào file
echo "🚀 [$TIMESTAMP] Pushed branch '$BRANCH_NAME' to remote: $REMOTE_URL" >> "$LOG_FILE"
echo "-----------------------------------" >> "$LOG_FILE"
